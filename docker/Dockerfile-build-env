FROM debian:bullseye
RUN apt-get update \
  && apt-get upgrade -y \
  && apt-get install -y \
    gettext \
    libncurses-dev \
    pip \
  && rm -rf /var/lib/apt/lists
RUN python3 -m pip install meson ninja

WORKDIR /rmw
RUN useradd -M -U rmw
RUN passwd -d rmw
RUN chown rmw:rmw /rmw

COPY ./docker/entrypoint-test.sh .
RUN chown rmw:rmw entrypoint-test.sh
USER rmw
ENTRYPOINT ["/bin/bash"]
